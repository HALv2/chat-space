.SideBar
  .LeftHeader
    .LeftHeader__list
      %h3.LeftHeader__userName
        = current_user.name
      %ul.LeftHeader__iconList
        %li.LeftHeader__iconEdit
          = link_to new_group_path, class: "aa" do
            = icon('fas', 'edit')
        %li.LeftHeader__iconNew
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .GroupList
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group) do
          .Group__name 
            = group.name
          .Group__notification 
            = group.show_last_message
        